[user]
	email = hideo.sup@gmail.com
	name = HiDeo
[github]
	user = HiDeoo
[filter "lfs"]
	clean = git-lfs clean %f
	required = true
	smudge = git-lfs smudge %f
[commit]
	gpgsign = true
	verbose = true
[gpg]
	program = /usr/local/bin/gpg_wrap
[hub]
	protocol = ssh
[grep]
  lineNumber = true
[pager]
	diff = diff-so-fancy | less --tabs=1,5 -RFX
	show = diff-so-fancy | less --tabs=1,5 -RFX
[diff]
	indentHeuristic = true
	tool = Kaleidoscope
[difftool]
	prompt = false
[difftool "Kaleidoscope"]
  cmd = ksdiff --partial-changeset --relative-path \"$MERGED\" -- \"$LOCAL\" \"$REMOTE\"
[merge]
	log = true
	tool = Kaleidoscope
[mergetool "Kaleidoscope"]
  cmd = ksdiff --merge --output \"$MERGED\" --base \"$BASE\" -- \"$LOCAL\" \"$REMOTE\"
	trustExitCode = true
[stash]
  showPatch = true
[status]
  showUntrackedFiles = all
[alias]
	a = add
	ap = add -p
	b = branch
	branches = for-each-ref --sort=-committerdate --format=\"%(color:blue)%(authordate:relative)\t%(color:red)%(authorname)\t%(color:white)%(color:bold)%(refname:short)\" refs/remotes
	c = clone --recursive
	cancel = reset --hard
	co = checkout
	d = diff
	dt = difftool
	last-msg = !git --no-pager log --format=format:%B -1
  last-sha = !git --no-pager log --format=format:%H -1
	ls = log --graph --pretty=format:"%C(yellow)%h\\ %C(green)[%ad]%C(red)%d\\ %C(reset)%s\\ %C(blue)(%cn)" --date=short
	r = reflog -20
	ra = rebase --abort
  rc = rebase --continue
	rma = rebase master
  rmi = rebase master -i
	rv = remote -v
	s = status -sb
	sub = submodule update --init --recursive
	undo = reset --soft HEAD^
